{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "secure_link_app",
  "version": "0.1.0",
  "identifier": "foura.secure-link.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "secure_link_app",
        "width": 400,
        "height": 600,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "target/release/secure_link_windows_service.exe": "secure_link_windows_service.exe"
    },
    "windows": {
      "wix": {
        "fragmentPaths": ["uninstall_service.wxs"],
        "componentRefs": ["ServiceManagementUninstall"]
      }
    }
  }
}